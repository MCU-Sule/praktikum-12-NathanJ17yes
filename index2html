<script>
    let gambar1 = document.createElement("img")
    let gambar2 = document.createElement("img")
    let gambar3 = document.createElement("img")
    function satu(){
    $.getJSON("league.json", function(result){
        let i = parseInt(Math.round(Math.random()*152))
        let dg = document.getElementById("g1")
        gambar1.src = (result[i].icon)
        document.getElementById("n1").innerHTML = (result[i].name)
        dg.appendChild(gambar1)
        document.getElementById("d1").innerHTML = (result[i].description)
    }) 
    }
    function dua(){
    $.getJSON("league.json", function(result){
        let a = parseInt(Math.round(Math.random()*152))
        let dg2 = document.getElementById("g2")
        console.log(result)
        gambar2.src = (result[a].icon)
        document.getElementById("n2").innerHTML = (result[a].name)
        dg2.appendChild(gambar2)
        document.getElementById("d2").innerHTML = (result[a].description)
    }) 
    }
    function tiga(){
    $.getJSON("league.json", function(result){
        let b = parseInt(Math.round(Math.random()*152))
        let dg3 = document.getElementById("g3")
        console.log(result)
        gambar3.src = (result[b].icon)
        document.getElementById("n3").innerHTML = (result[b].name)
        dg3.appendChild(gambar3)
        document.getElementById("d3").innerHTML = (result[b].description)
    }) 
    }
</script>
